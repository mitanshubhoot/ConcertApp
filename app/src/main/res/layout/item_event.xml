<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText,NamespaceTypo"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="230dp"
            android:id="@+id/eventparent"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:background="@drawable/bgitemcustom">
            
            <ImageView
                android:id="@+id/eventpicture"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/guitar"
                android:scaleType="centerCrop">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eventtitle"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:lineSpacingExtra="8dp"
                android:textSize="20sp"
                android:textColor="#374160"
                android:text="Lincoln Martin Concert"
                />
            <LinearLayout
                android:id="@+id/eventbadge"
                android:alpha="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/badgeorange"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">
                
                <TextView
                    android:id="@+id/eventcategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Concert"
                    android:textColor="#F08C21"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>